{
  "name": "ubuntu-xp-portfolio",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Ubuntu×XP Desktop-inspired Portfolio - Modern OS simulation in browser",
  "author": "Yamaç Bezirgan",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:all",
    "build:legacy": "cd old && npm install && npm run build",
    "postbuild:legacy": "node scripts/copy-legacy.cjs",
    "build:new": "vite build",
    "build:all": "npm run build:legacy && npm run postbuild:legacy && npm run build:new",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "dompurify": "^3.3.0",
    "framer-motion": "^12.23.24",
    "idb": "^8.0.0",
    "immer": "^10.0.3",
    "marked": "^11.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "react-swipeable": "^7.0.2",
    "uuid": "^9.0.1",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.0.10",
    "prettier": "^3.2.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "terser": "^5.44.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
